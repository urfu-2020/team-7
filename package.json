{
  "name": "Kilogram",
  "version": "2.0.0",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "git-scripts": "^0.4.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "2.5.2",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "surge": "^0.23.0"
  },
  "git": {
  "scripts": {
    "pre-push": "surge --project ./ --domain kilogram-team7.surge.sh"
  }
},
  "engines": {
    "node": "15.14.0",
    "npm": "7.7.6"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,yaml,yml,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "scripts": {
    "lint:css": "stylelint **/*.css",
    "lint:js": "eslint .",
    "lint": "npm run lint:css & npm run lint:js",
    "startd": "cd Kilogram && nodemon -r dotenv/config app.js",
    "start": "cd Kilogram && NODE_ENV=production node app.js",
    "clean": "rimraf node_modules/",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "emulate": "npm run heroku-postbuild && npm run startdp",
    "startdp": "cd Kilogram && NODE_ENV=production nodemon -r dotenv/config app.js"
  },
  "dependencies": {
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2"
  }
}
